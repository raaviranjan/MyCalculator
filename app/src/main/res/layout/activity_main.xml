<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ravi.mycalculator.MainActivity">


    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Display"
        android:layout_marginBottom="30dp"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignStart="@+id/e1"
        android:layout_alignRight="@+id/bpi"
        android:layout_alignEnd="@+id/bpi" />


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20dp"
        android:id="@+id/b5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b4"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignLeft="@+id/b8"
        android:layout_alignStart="@+id/b8" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="20dp"
        android:id="@+id/b6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b5"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="20dp"
        android:id="@+id/bmul"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b6"
        android:layout_alignBottom="@+id/b6"
        android:layout_alignLeft="@+id/bdiv"
        android:layout_alignStart="@+id/bdiv" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20dp"
        android:id="@+id/b2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_alignLeft="@+id/b5"
        android:layout_alignStart="@+id/b5" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20dp"
        android:id="@+id/b3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:id="@+id/bsub"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_alignLeft="@+id/bmul"
        android:layout_alignStart="@+id/bmul" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:id="@+id/b0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/bdot"
        android:layout_alignBottom="@+id/bdot"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20dp"
        android:id="@+id/bequal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20dp"
        android:id="@+id/badd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/bequal"
        android:layout_alignBottom="@+id/bequal"
        android:layout_alignLeft="@+id/bsub"
        android:layout_alignStart="@+id/bsub" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="20dp"
        android:id="@+id/b7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20dp"
        android:id="@+id/b4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/b7"
        android:layout_alignLeft="@+id/b7"
        android:layout_alignStart="@+id/b7" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/b1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/b4"
        android:layout_alignLeft="@+id/b4"
        android:layout_alignStart="@+id/b4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20dp"
        android:id="@+id/bdot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20dp"
        android:id="@+id/b8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_above="@+id/b5"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20dp"
        android:id="@+id/b9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_above="@+id/b6"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20dp"
        android:id="@+id/bdiv"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_above="@+id/bmul"
        android:layout_toRightOf="@+id/b6"
        android:layout_toEndOf="@+id/b6" />

    <Button
        android:text="pi"
        android:textSize="20dp"
        android:layout_width="70dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="wrap_content"
        android:id="@+id/bpi"
        android:layout_alignBaseline="@+id/bdiv"
        android:layout_alignBottom="@+id/bdiv"
        android:layout_toRightOf="@+id/bmul"
        android:layout_toEndOf="@+id/bmul" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/bpow"
        android:text="^"
        android:textSize="20dp"
        android:layout_below="@+id/bpi"
        android:layout_toRightOf="@+id/bmul"
        android:layout_alignRight="@+id/bpi"
        android:layout_alignEnd="@+id/bpi" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Enter value"
        android:gravity="bottom"
        android:lines="1"
        android:textSize="25sp"
        android:layout_below="@+id/t1"
        android:layout_alignLeft="@+id/b7"
        android:layout_alignStart="@+id/b7"
        android:layout_toStartOf="@+id/bpi"
        android:layout_toLeftOf="@+id/bpi" />

    <Button
        android:text="More"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bmul"
        android:id="@+id/bmore"
        android:layout_alignRight="@+id/bpow"
        android:layout_alignEnd="@+id/bpow"
        android:layout_alignBottom="@+id/badd"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/bsub" />

    <Button
        android:text="del"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bdel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/t1"
        android:layout_toRightOf="@+id/e1"
        android:layout_alignRight="@+id/t1"
        android:layout_alignEnd="@+id/t1" />

    <Button
        android:text="ans"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpow"
        android:layout_toRightOf="@+id/bmul"
        android:id="@+id/bansw"
        android:layout_alignRight="@+id/bpow"
        android:layout_alignEnd="@+id/bpow" />


</RelativeLayout>
